                      Prenom</th>
                      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 49px;">
                        Ville
                      </th>
                      <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;">
                        Adresse</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 84px;">
                        Cin</th>
                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;">Telephone</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 84px;">
                            Fax</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;">Code postale</th>
                       <th></th>     
                      </tr>

              </thead>
              <tbody>
                  {% for c in client %}
                <tr role="row" class="odd">
                      <td class="sorting_1">{{c.id}}</td>
                      <td>{{c.nom}}</td>
                      <td>{{c.prenom}}</td>
                      <td>{{c.ville}}</td>
                      <td>{{c.Adresse}}</td>
                      <td>{{c.Cin}}</td>
                      <td>{{c.Telephone}}</td>
                      <td>{{c.Fax}}</td>
                      <td>{{c.CodePostale}}</td>
                      <td> <a href="{{ path('updateclient', {'id': c.id }) }}" type="button" class="btn btn-success"><i class="fas fa-pen-square"></i></button>
                        <a href="{{ path('deleteclient', {'id': c.id }) }}" type="button" class="btn btn-danger" ><i class="fas fa-trash-alt"></i></button></td>
                  </tr> {% endfor %}</tbody>
              
          </table>
        </div>
        </div>
        <div class="row">
          <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" id="DataTables_Table_0_info" role="status" aria-live="polite">
